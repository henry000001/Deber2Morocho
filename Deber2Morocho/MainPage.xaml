<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Deber2Morocho.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Sistema de Calificaciones" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Ingrese las siguientes notas: " FontSize="25" HorizontalOptions="Center" TextColor="#000" />


        <Entry x:Name="txtNotaS1" Placeholder="Nota Seguimiento 1: " Keyboard="Numeric"/>
        <Entry x:Name="txtExamen1" Placeholder="Examen 1: "  Keyboard="Numeric"/>

        <Entry x:Name="txtNotaS2" Placeholder="Nota Seguimiento 2: " Keyboard="Numeric"/>
        <Entry x:Name="txtExamen2" Placeholder="Examen 2: "  Keyboard="Numeric"/>
        <Entry x:Name="txtNotaParcial2" Placeholder="Nota Parcial 1" IsEnabled="False"/>

        <Entry x:Name="txtNotaParcial1" Placeholder="Nota Parcial 2" IsEnabled="False"/>

        <Entry x:Name="txtNotaFinal" Placeholder="NotaFinal" IsEnabled="False"/>

        <Entry x:Name="txtEstado" Placeholder="Estado" IsEnabled="False"/>

        <Button x:Name="btnCalcular" Text="Calcular" Clicked="btnCalcular_Clicked"/>

    </StackLayout>

</ContentPage>
